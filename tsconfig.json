{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src/server",
    "types": [
      "@types/node",
    ]
  },
  "include": [
    "./src/server/**/*"
  ],
}